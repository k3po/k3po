connect "tcp://localhost:12345"
connected

write "PREPARE\n"
write "version:2.0\n"
write "name:org/kaazing/specification/control/assets/server\n"
write "name:org/kaazing/specification/control/assets/client\n"
write "\n"

read "PREPARED\n"
read "content-length:218\n"
read "\n"
read "# server\n"
read "property uri \"tcp://localhost:8000\"\n"
read "accept ${uri}\n"
read "accepted\n"
read "connected\n"
read "read \"echo\"\n"
read "write \"echo\"\n"
read "close\n"
read "closed\n"
read "# client\n"
read "property uri \"tcp://localhost:8000\"\n"
read "connect ${uri}\n"
read "connected\n"
read "write \"echo\"\n"
read "read \"echo\"\n"
read "closed\n"

write "AWAIT\n"
write "barrier:NOT_EXISTING\n"
write "\n"

read "ERROR\n"
read "summary:Internal error\n"
read "content-length:72\n"
read "\n"
read "Can not notify a barrier that does not exist in the script: NOT_EXISTING"

write "START\n"
write "\n"

read "STARTED\n"
read "\n"

read "FINISHED\n"
read "content-length:218\n"
read "\n"
read "# server\n"
read "property uri \"tcp://localhost:8000\"\n"
read "accept ${uri}\n"
read "accepted\n"
read "connected\n"
read "read \"echo\"\n"
read "write \"echo\"\n"
read "close\n"
read "closed\n"
read "# client\n"
read "property uri \"tcp://localhost:8000\"\n"
read "connect ${uri}\n"
read "connected\n"
read "write \"echo\"\n"
read "read \"echo\"\n"
read "closed\n"

close
