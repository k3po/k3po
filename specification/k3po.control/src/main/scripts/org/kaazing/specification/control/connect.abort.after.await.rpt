connect "tcp://localhost:12345"
connected

write "PREPARE\n"
write "version:2.0\n"
write "name:org/kaazing/specification/control/assets/server\n"
write "name:org/kaazing/specification/control/assets/client.with.barriers\n"
write "\n"

read "PREPARED\n"
read "barrier:AWAITING_BARRIER\n"
read "barrier:NOTIFYING_BARRIER\n"
read "content-length:257\n"
read "\n"
read "# server\n"
read "property uri \"tcp://localhost:8000\"\n"
read "accept ${uri}\n"
read "accepted\n"
read "connected\n"
read "read \"echo\"\n"
read "write \"echo\"\n"
read "close\n"
read "closed\n"
read "# client\n"
read "connect \"tcp://localhost:8000\"\n"
read "connected\n"
read "read notify NOTIFYING_BARRIER\n"
read "write await AWAITING_BARRIER\n"
read "write \"echo\"\n"
read "read \"echo\"\n"
read "closed\n"

write "AWAIT\n"
write "barrier:NOTIFYING_BARRIER\n"
write "\n"

write "ABORT\n"
write "\n"

read "FINISHED\n"
read "awaiting:AWAITING_BARRIER\n"
read "awaiting:NOTIFYING_BARRIER\n"
read "content-length:70\n"
read "\n"
read "# server\n"
read "property uri \"tcp://localhost:8000\"\n"
read "accept ${uri}\n"
read "\n"
read "# client\n"
read "\n"

close
