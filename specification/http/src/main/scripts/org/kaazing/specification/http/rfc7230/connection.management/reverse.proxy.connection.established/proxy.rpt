#
# client <--> proxy
#
accept "http://localhost:8080/index.html"
accepted
connected

read http:method "GET"
read http:header "Host" "localhost:8080"
read notify GOT_REQUEST
read closed

write await GOT_RESPONSE
write http:status "200" "OK"
write http:version "HTTP/1.1"
write http:content-length
write http:header "Content-Type" "text/html"
write "<html><body>Hello World!</body></html>"
write close


#
# proxy <--> server (listening at localhost:8081)
#
connect await GOT_REQUEST
        "http://localhost:8080/index.html"
        option http:transport "tcp://localhost:8081"
connected

write http:method "GET"
write http:version "HTTP/1.1"
write http:host
write close

read http:status "200" /.+/
read http:version "HTTP/1.1"
read "<html><body>Hello World!</body></html>"
read notify GOT_RESPONSE
read closed
