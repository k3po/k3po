connect "file:target/k3po/echo.back.to.sender.dat"
        option file:size 256
        option file:mode "rw"
connected

write notify FILE_EXISTS

write option file:offset "0"
write "Hello, world"
write notify ECHO_REQUESTED

read await ECHOED
read option file:offset "128"
read "Hello, world"
